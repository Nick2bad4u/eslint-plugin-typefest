{
    "$schema": "https://nodejs.org/docs/latest/node-config-schema.json",
    "nodeOptions": {
        "allow-fs-read": [
            "./src",
            "./test",
            "./dist",
            "./node_modules",
            "./coverage",
            "./scripts",
            "./docs",
            "./.github",
            "./package.json",
            "./tsconfig.json",
            "./eslint.config.mjs",
            "./cliff.toml"
        ],
        "allow-fs-write": [
            "./dist",
            "./coverage",
            "./temp",
            "./.cache"
        ],
        "conditions": [
            "development",
            "node"
        ],
        "diagnostic-dir": "./temp",
        "enable-source-maps": true,
        "max-old-space-size-percentage": "80",
        "trace-deprecation": false,
        "trace-warnings": false,
        "warnings": true
    },
    "testRunner": {
        "experimental-test-coverage": true,
        "test-concurrency": 4,
        "test-coverage-branches": 80,
        "test-coverage-exclude": [
            "**/test/**",
            "**/*.test.{ts,tsx}",
            "**/*.spec.{ts,tsx}",
            "**/node_modules/**",
            "**/dist/**",
            "**/coverage/**"
        ],
        "test-coverage-functions": 80,
        "test-coverage-include": [
            "src/**/*.ts"
        ],
        "test-coverage-lines": 80,
        "test-force-exit": false,
        "test-isolation": "process",
        "test-reporter": [
            "spec",
            "json"
        ],
        "test-reporter-destination": [
            "stdout",
            "./coverage/test-results.json"
        ],
        "test-timeout": 30000,
        "test-update-snapshots": true
    }
}
