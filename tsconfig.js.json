{
    "$schema": "https://www.schemastore.org/tsconfig.json",
    "compilerOptions": {
        "allowJs": true,
        "checkJs": false,
        "erasableSyntaxOnly": false,
        "isolatedDeclarations": false,
        "noEmit": true,
        "tsBuildInfoFile": "./.cache/tsbuildinfo/tsconfig.js.tsbuildinfo",
        "types": [
            "node"
        ]
    },
    "exclude": [
        ".cache/**",
        "coverage/**",
        "dist/**",
        "node_modules/**"
    ],
    "extends": "./tsconfig.json",
    "include": [
        "*.mjs"
    ]
}
