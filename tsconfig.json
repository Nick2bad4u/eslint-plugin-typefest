{
    "$schema": "https://www.schemastore.org/tsconfig.json",
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "target": "ES2024",
        "lib": [
            "ES2024"
        ],
        "strict": true,
        "skipLibCheck": true,
        "noEmit": true,
        "types": [
            "node",
            "vitest/globals"
        ]
    },
    "include": [
        "./**/*.ts",
        "./**/*.tsx",
        "./**/*.mts",
        "./**/*.cts",
        "./**/*.js",
        "./**/*.mjs",
        "./**/*.cjs"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
