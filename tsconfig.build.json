{
    "$schema": "https://www.schemastore.org/tsconfig.json",
    "compilerOptions": {
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": false,
        "isolatedDeclarations": false,
        "isolatedModules": false,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "noEmit": false,
        "outDir": "./dist",
        "rootDir": "./src",
        "sourceMap": true,
        "tsBuildInfoFile": "./.cache/tsbuildinfo/tsconfig.build.tsbuildinfo",
        "types": [
            "node"
        ]
    },
    "exclude": [
        ".cache/**",
        "dist/**",
        "node_modules/**",
        "test/**"
    ],
    "extends": "./tsconfig.json",
    "include": [
        "src/**/*.ts"
    ]
}
