{
    "$schema": "https://www.schemastore.org/tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "noEmit": true,
        "strict": true
    },
    "exclude": [
        ".docusaurus",
        "build",
        "node_modules"
    ],
    "extends": "../../node_modules/@docusaurus/tsconfig/tsconfig.json",
    "include": [
        "docusaurus.config.ts",
        "sidebars.ts",
        "sidebars.rules.ts",
        "src/**/*"
    ]
}
