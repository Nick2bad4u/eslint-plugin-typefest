{
    "$schema": "vscode://schemas/launch",
    "compounds": [],
    "configurations": [
        {
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "experimentalNetworking": "auto",
            "name": "üß™ Run Tests",
            "presentation": {
                "group": "Testing",
                "hidden": false,
                "order": 1
            },
            "request": "launch",
            "runtimeArgs": [
                "run",
                "test"
            ],
            "runtimeExecutable": "npm",
            "type": "node"
        },
        {
            "args": [
                "run",
                "${relativeFile}"
            ],
            "autoAttachChildProcesses": true,
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "experimentalNetworking": "auto",
            "name": "üîç Debug Current Test File",
            "nodeVersionHint": 24,
            "presentation": {
                "group": "Testing",
                "hidden": false,
                "order": 1
            },
            "program": "${workspaceFolder}/node_modules/vitest/vitest.mjs",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**"
            ],
            "smartStep": true,
            "sourceMaps": true,
            "type": "node"
        }
    ],
    "inputs": [
        {
            "description": "Select the environment to use",
            "id": "selectEnvironment",
            "options": [
                {
                    "label": "Development",
                    "value": "development"
                },
                {
                    "label": "Production",
                    "value": "production"
                }
            ],
            "type": "pickString"
        }
    ],
    "version": "0.2.0"
}
